<%- include("partials/header"); -%>

<h1>Compose</h1>
<form method="POST" action="/compose">
    <div class="form-group">
        <label for="pt">Title</label>
        <input type="text" name="postTitle" id="pt" class="form-control">
    </div>
    <div class="form-group">
        <label for="post">Post</label>
        <textarea name="postBody" id="post" cols="30" rows="5" class="form-control"></textarea>
    </div>
    <button type="submit" name="button" class="btn btn-primary">Publish</button>
</form>

<%- include("partials/footer"); -%>